# editorconfig.org

# Top-most EditorConfig file. Stop searching in parent directories.
root = true

# Defaults applied to all files unless overridden below
[*]
# Use UTF-8 character set
charset = utf-8

# Use Unix-style newlines (LF)
end_of_line = lf

# Ensure files end with a single newline character
insert_final_newline = true

# Remove trailing whitespace characters on save
trim_trailing_whitespace = true

# Lua specific settings
[*.lua]
# Use spaces for indentation (common Lua practice)
indent_style = space

# Set indentation level to 2 spaces (common with tools like stylua, adjust if needed)
indent_size = 2

# Optional: Set a maximum line length (adjust as preferred)
# max_line_length = 100

[*.json]
# Indentation style for JSON files
indent_style = space

# Number of spaces per indent. 2 is very common for JSON.
indent_size = 2

# Standard line ending for cross-platform compatibility
end_of_line = lf

# JSON standard character encoding
charset = utf-8

# Remove trailing whitespace at the end of lines
trim_trailing_whitespace = true

# Ensure a newline at the end of the file
insert_final_newline = true