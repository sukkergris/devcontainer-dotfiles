{
    "name": "Testing the devcontainer-dotfiles repos env",
    "image": "isuperman/lua-dev-container:0.1.1",
    "workspaceFolder": "/x",
    "workspaceMount": "source=${localWorkspaceFolder},target=/x,type=bind",
    "remoteUser": "root",
    "mounts": [
        "source=${localWorkspaceFolder}/zsh/.zshrc,target=/root/.zshrc,type=bind",
        "source=${localWorkspaceFolder}/bash/.bashrc,target=/root/.bashrc,type=bind",
        "source=${localWorkspaceFolder}/nvim/.config/nvim,target=/root/.config/nvim,type=bind",
        "source=${localWorkspaceFolder}/shell-common/.config/shell-common,target=/root/.config/shell-common,type=bind"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "streetsidesoftware.code-spell-checker",
                "ms-azuretools.vscode-docker",
                "mhutchie.git-graph"
            ]
        }
    }
}
